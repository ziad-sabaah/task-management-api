# Task Management API Environment Configuration
# Copy this file to .env and update the values for your environment
# NEVER commit the actual .env file to version control!

# =============================================================================
# API Configuration
# =============================================================================
API_TITLE="Task Management API"
API_DESCRIPTION="A robust task management API built with FastAPI"
API_VERSION="1.0.0"

# =============================================================================
# Server Configuration
# =============================================================================
# Host to bind the server to
# Development: 127.0.0.1 or localhost (local only)
# Production: 0.0.0.0 (all interfaces) - use with caution behind proper proxy/firewall
HOST="127.0.0.1"

# Port to run the server on
PORT="8000"

# Enable debug mode (provides detailed error messages and auto-reload)
# IMPORTANT: Set to "false" in production for security
DEBUG="true"

# Environment identifier (affects logging, error handling, etc.)
# Values: development, testing, staging, production
ENVIRONMENT="development"

# =============================================================================
# Database Configuration
# =============================================================================
# Database connection string
# Examples:
# SQLite (development): sqlite:///./tasks.db
# PostgreSQL: postgresql://user:password@localhost:5432/taskdb
# MySQL: mysql://user:password@localhost:3306/taskdb

# Development (SQLite)
DATABASE_URL="sqlite:///./tasks.db"

# Production examples (uncomment and modify as needed):
# DATABASE_URL="postgresql://taskuser:your_secure_password@localhost:5432/taskmanagement"
# DATABASE_URL="mysql://taskuser:your_secure_password@localhost:3306/taskmanagement"

